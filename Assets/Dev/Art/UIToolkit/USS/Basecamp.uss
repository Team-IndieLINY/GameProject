.button {
    width: 282px;
    font-size: 40px;
    background-image: url('project://database/Assets/Dev/Art/Sprite/Basecamp/background_basecamp_door.png?fileID=2800000&guid=53d2351a72ee3af4caa8b0c76d54a9fd&type=3#background_basecamp_door');
    position: absolute;
    height: 1080px;
    background-color: rgba(0, 0, 0, 0);
    top: 0;
    left: 0;
    border-left-color: rgba(149, 149, 149, 0);
    border-right-color: rgba(149, 149, 149, 0);
    border-top-color: rgba(149, 149, 149, 0);
    border-bottom-color: rgba(149, 149, 149, 0);
    transition-duration: 0.3s;
}

.button:hover {
    border-left-color: rgba(183, 183, 183, 0);
    border-right-color: rgba(183, 183, 183, 0);
    border-top-color: rgba(183, 183, 183, 0);
    border-bottom-color: rgba(183, 183, 183, 0);
    border-top-width: 10px;
    border-right-width: 10px;
    border-bottom-width: 10px;
    border-left-width: 10px;
    scale: 1 1;
    background-color: rgba(0, 0, 0, 0);
    -unity-background-image-tint-color: rgb(140, 140, 140);
    transition-duration: 0.3s;
}

.day_label_fade_out {
    font-size: 80px;
    -unity-font-style: bold;
    color: rgba(255, 255, 255, 0);
    transition-duration: 2s;
    transition-delay: 0s;
}

.day_label_fade_in {
    color: rgb(255, 255, 255);
    transition-duration: 2s;
}

.fade_in {
    width: 1920px;
    height: 1080px;
    transition-duration: 2s;
}

.fade_out {
    background-color: rgb(0, 0, 0);
    transition-duration: 2s;
}
